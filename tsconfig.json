{
  "compilerOptions": {
    "target": "es6",                          
    "module": "esnext",                     
    "strict": true,                  
    "noImplicitThis": false,
    "strictPropertyInitialization": false,

    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "node_modules/*"
      ]
    },

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "lib": ["dom", "esnext"],
    "types": [
      "esnext",
      "reflect-metadata"
    ]
  }
}